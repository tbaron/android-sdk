<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	style="@style/insp_card_news_image"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/insp_card_news_image"
	tools:layout_margin="@dimen/insp_card_padding">

	<RelativeLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_toLeftOf="@id/insp_card_image"
		android:layout_toStartOf="@id/insp_card_image"
		android:padding="@dimen/insp_card_padding">

		<TextView
			style="@style/insp_card_news_title"
			android:id="@id/insp_card_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="Sample Title" />

		<TextView
			style="@style/insp_card_news_description"
			android:id="@id/insp_card_description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/insp_card_title"
			tools:text="Sample description..." />

		<TextView
			style="@style/insp_card_news_source"
			android:id="@id/insp_card_source"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_toLeftOf="@id/insp_card_date"
			android:layout_toStartOf="@id/insp_card_date"
			tools:text="www.sample.url" />

		<TextView
			style="@style/insp_card_news_date"
			android:id="@id/insp_card_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			tools:text="Yesterday" />

	</RelativeLayout>

	<ImageView
		android:id="@id/insp_card_image"
		android:layout_width="@dimen/insp_card_news_image"
		android:layout_height="match_parent"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:adjustViewBounds="true"
		tools:ignore="contentDescription" />

</RelativeLayout>
