<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	style="@style/insp_card_web"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView
		style="@style/insp_card_web_title"
		android:id="@id/insp_card_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:text="Sample Title" />

	<TextView
		style="@style/insp_card_web_description"
		android:id="@id/insp_card_description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:text="Sample description..." />

	<TextView
		style="@style/insp_card_web_url"
		android:id="@id/insp_card_url"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="end"
		tools:text="www.sample.url" />

	<com.infospace.sdk.widgets.SplitColumnLayout
		style="@style/insp_card_web_deeplinks"
		android:id="@id/insp_card_deeplinks"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

	<com.infospace.sdk.widgets.SplitColumnLayout
		style="@style/insp_card_web_actions"
		android:id="@id/insp_card_actions"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

</LinearLayout>
